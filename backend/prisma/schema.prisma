generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String
  products Product[]
}

model Product {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id     Int
  name        String
  price       Int
  stock       Int
  description String
}
